<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TableRow
            style="@style/common_tablerow">

            <TextView
                style="@style/common_tablerow_text"
                android:text="@string/cardNum"/>

            <EditText
                android:id="@+id/cardNumber"
                style="@style/common_tablerow_edit"
                android:hint="@string/hint_card_num"
                android:layout_width="0dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/read_card"
                android:layout_marginLeft="8dp"
                style="@style/common_readbj_button"
                android:text="@string/read_card"/>

        </TableRow>
        <TableRow
            style="@style/common_tablerow">

            <TextView
                android:id="@+id/tv_password"
                style="@style/common_tablerow_text"
                android:text="密码"/>

            <EditText
                android:id="@+id/card_password"
                style="@style/common_tablerow_edit"
                android:hint="@string/hint_card_password"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="textPassword"
                />
            <Button
                android:id="@+id/read_card_password"
                android:layout_marginLeft="8dp"
                style="@style/common_readbj_button"
                android:text="@string/read_pwd"/>
        </TableRow>
        <TableRow
            style="@style/common_tablerow">

            <TextView
                android:id="@+id/tv_comfirepassword"
                style="@style/common_tablerow_text"
                android:text="确认密码"/>

            <EditText
                android:id="@+id/card_password2"
                style="@style/common_tablerow_edit"
                android:hint="@string/hint_card_passwords"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="textPassword"
                />
            <Button
                android:id="@+id/read_card_password2"
                android:layout_marginLeft="8dp"
                style="@style/common_readbj_button"
                android:text="@string/read_pwd"/>
        </TableRow>
        <TableRow
            android:id="@+id/tbR_password"
            style="@style/common_tablerow"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_comfirepassword2"
                style="@style/common_tablerow_text"
                android:text="确认密码"/>

            <EditText
                android:id="@+id/card_comfirepassword"
                style="@style/common_tablerow_edit"
                android:hint="请再次确认新密码"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="textPassword"
                />
            <Button
                android:id="@+id/read_card_comfirepassword"
                android:layout_marginLeft="8dp"
                style="@style/common_readbj_button"
                android:text="@string/read_pwd"/>
        </TableRow>
    </TableLayout>
</LinearLayout>