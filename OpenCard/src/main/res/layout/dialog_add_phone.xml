<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_height="50dp">
        <TextView
            style="@style/message_sign_textview"
            android:text="请输入手机号:"/>

        <TextView
            android:id="@+id/tv_exit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/ic_no"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ll_loginPassword"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="wrap_content">
        <EditText
            android:id="@+id/et_sign_phone"
            style="@style/message_sign__edit"
            android:layout_width="200dp"
            android:inputType="number"
            android:enabled="true"/>
        <Button
            android:id="@+id/btn_send_message"
            style="@style/common_open_card_button"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:text="发送验证码"/>
    </RelativeLayout>

        <TextView
            style="@style/message_sign_textview"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="请输入验证码:"/>

    <RelativeLayout
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="wrap_content">
        <EditText
            android:id="@+id/et_check_code"
            style="@style/message_sign__edit"
            android:layout_width="200dp"
            android:enabled="true"/>
        <Button
            android:id="@+id/btn_ok"
            style="@style/common_button"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:text="确认"/>
    </RelativeLayout>
</LinearLayout>